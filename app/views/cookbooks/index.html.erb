<% if signed_in? %>
<section class="content-header">
<section class="content">
<table class="table table-hover">
<!-- On rows -->
<th> Name</th>
<th> Author</th>
<th>status</th>
<th>Date</th>
<th>Options</th>

<!-- On cells (`td` or `th`) -->
<% @cookbooks.each do |cookbook| %>
<tr>
  <td ><%= cookbook.name %></td>
  <td ><%= current_user.name %></td>
  <td ><%= cookbook.created_at %></td>
  <td ><%= cookbook.updated_at %></td>
 
  <td>
          <div class="btn-group">
          <button data-toggle="dropdown" class="settings-button dropdown-toggle"> <i class="fa fa-cog fa-2x"></i> </button>
            <ul class="dropdown-menu">
                <li><%= link_to 'View', cookbook %></li>
                <li><%= link_to 'Delete', cookbook, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                
            </ul>
          </div>
  </td>
 </tr>
  <% end %>
</table>
</section>
</section>
<% end %>

