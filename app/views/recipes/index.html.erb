
<% if signed_in? %>

<section class="content-main">
<table class="table table-hover">
<!-- On rows -->
<th> Name</th>

<th>status</th>
<th>Date</th>
<th>Options</th>

<!-- On cells (`td` or `th`) -->
<% @recipes.each do |recipe| %>
<tr>
  <td ><%= recipe.name %></td>
  <td >Pending</td>
  <td ><%= recipe.created_at %></td>
  
 
  <td>
          <div class="btn-group">
          <button data-toggle="dropdown" class="settings-button dropdown-toggle"> <i class="fa fa-cog fa-2x"></i> </button>
            <ul class="dropdown-menu">
                <li><%#= link_to 'View' , cookbook_recipes_id_path , method: "get" %></li>
                <li><%#= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                
            </ul>
          </div>
  </td>
 </tr>
  <% end %>
</table>

</section>
<% end %>




